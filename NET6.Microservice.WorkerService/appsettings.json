{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "MassTransit": {
    "MessageBusRabbitMQ": "amqp://admin:password@localhost:5671/",
    "MessageBusSQS": "[Accesskey]:[SecretKey]@[Region]",
    "OrderQueue": "consumer-order",
    "IsUsingAmazonSQS": false,
    "IsUsingRabbitMQ": true
  },
  "Environment": "Development",
  "OpenTelemetry": {
    "ZipkinURI": "http://localhost:9411/api/v2/spans",
    "JaegerHost": "localhost",
    "JaegerPort": 6831
  },

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "..\\logs\\NET6.Microservice.WorkerService.logs.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter,Serilog",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
