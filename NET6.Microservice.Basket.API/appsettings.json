{
  "ConnectionString": "127.0.0.1",
  "PathBaseSettings": {
    "ApplicationPathBase": "/basket-api"
  },
  "AllowedHosts": "*",

  "MassTransit": {
    "MessageBusRabbitMQ": "amqp://admin:password@localhost:5671/",
    "MessageBusSQS": "[Accesskey]:[SecretKey]@[Region]",
    "OrderQueue": "queue:consumer-order",
    "IsUsingAmazonSQS": false,
    "IsUsingRabbitMQ": true
  },
  "Environment": "Development",
  "Auth0": {
    "Authority": "https://dev-i5eh5nau.us.auth0.com",
    "ClientId": "",
    "Audience": "https://dev-i5eh5nau.us.auth0.com/api/v2/",
    "ClientSecret": ""
  },

  "OpenTelemetry": {
    "ZipkinURI": "http://localhost:9411/api/v2/spans",
    "JaegerHost": "localhost",
    "JaegerPort": 6831
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "..\\logs\\NET6.Microservices.Basket.API.logs.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter,Serilog",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 30000000
        }
      }
    ]
  }
}
